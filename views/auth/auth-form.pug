extends ../layout.pug 

block content 
    script(src='/javascript/auth/auth-form.js')
    script(src="/javascript/sign-form/signin-form.js")
    div(class="auth-container")
        form(class="auth-form")
            h1(class="auth-title") Connexion 
            div(class="auth-input-container")
                label(for="email-auth-form") Email
                input(class='form-control' type="email" name="email" id="email-auth-form")
                p(class="email-error auth-error")
            div(class="auth-input-container")
                label(for="password-auth-form") Password
                input(class='form-control' type="password" name="password" id="password-auth-form")
                p(class="password-error auth-error")
            div(id="forgot" class="text-hint") Forgot password ?
            if errors 
                p erreur
            div(class="auth-submit-container")
                input(type="submit" value="Connexion" )
