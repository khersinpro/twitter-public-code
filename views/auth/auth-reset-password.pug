extends ../layout.pug 

block content 
    script(src='/javascript/auth/auth-form.js')
    div(class="d-flex flex-row content justify-content-center mx-auto")
        form(class="card w-50 mt-5" method="post" action=url)
            div(class="card-header") Réinitialisation de mot de passe 
            div(class="card-body")
                div(class="form-group")
                    label Mot de passe
                    input(class='form-control' type="password" name="password")
                if errors 
                    ul(class="my-2") 
                        each error in errors 
                            li(class="text-danger")= error
                div(class="w-100 d-flex flex-row justify-content-space-between align-items-center")
                    input(type="submit" value="Réinitialisatione " class="btn btn-primary ml-auto d-block" )
